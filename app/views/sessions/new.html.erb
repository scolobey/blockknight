<div class="login">

  <div class="login-field">
    <div class="login-field-header">
      <h1>Log In</h1>
    </div>

    <div class="login-field-input">
      <%= form_tag '/login' do %>

        <%= text_field_tag :email, nil, placeholder: "Email" %>
        <br>
        <%= password_field_tag :password, nil, placeholder: "Password" %>
        <br>
        <%= submit_tag "Login" %>

      <% end %>

      <%= link_to "Or get your account here!", "/signup"  %>
    </div>

  </div>

</div>
