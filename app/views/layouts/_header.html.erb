
<div class="header">
  <div class="logo-container">
    <a href="/" class="logo">
      <img class= "logo-img" src='/blockKnight.gif' height="60">
      <span class = "logo-title">
        Blockknight
      </span>
    </a>
  </div>

  <div class="header-navigation">
    <span class="nav-button"><%= link_to "Ticker", root_path, class: cp(root_path) %></span>
    <span class="nav-button"><%= link_to "News", news_path, class: cp(news_path) %></span>
    <span class="nav-button"><%= link_to "Blog", blog_posts_path, class: cp(blog_posts_path) %></span>
    <span class="nav-button"><a href="http://forums.blockknight.com/">Forum</a></span>
  </div>

  <div class="search-bar">
    <%= form_with url: search_path, local: true, method: :get, html: { class: "my-lg-0" } do |form| %>
      <%= form.text_field :q, placeholder: "Search", data: { behavior: "autocomplete" }, class: "form-control mr-sm-2" %>
    <% end %>
  </div>
</div>
