<!DOCTYPE html>
<html>
  <head>
    <link rel="icon" type="image/png" href="/assets/favicon.png">
    <% if content_for?(:title) %>
      <%= content_for(:title) %>
    <% else %>
      <title>blockknight.com</title>
    <% end %>

    <%= csrf_meta_tags %>

    <meta name="description" content="Blockknight.com provides news, prices, and in-depth descriptions for today's top cryptocurrencies."/>
    <meta name="keywords" content="cryptocurrency,blockchain,smart contract,bitcoin,litecoin,iota,gnosis,monero,tenx,comit network"/>
    <meta charset="UTF-8">
    <meta name="google" content="notranslate">
    <meta http-equiv="Content-Language" content="en">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <% if Rails.env.production? %>
      <script type="text/javascript">
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-103145265-1', 'auto');
      </script>
    <% end %>
  </head>

  <body>
    <p id="notice"><%= notice %></p>

    <input type="checkbox" id="nav-trigger" class="nav-trigger"/>

    <label for="nav-trigger"></label>

    <div class="nav-underlay"></div>

    <ul class="navigation">
      <% if current_user %>
        <li class="nav-item"><%= current_user.email %></li>
        <hr>
        <br>
        <li class="nav-item"><%= link_to "Logout", '/logout' %></li>
      <% else %>
        <br>
        <li class="nav-item"><%= link_to 'Login', '/login' %></li>
        <br>
        <li class="nav-item"><%= link_to 'Signup', '/signup' %></li>
      <% end %>
      <br>
      <li class="nav-item"><a href="/about">About</a></li>
    </ul>

    <div class="site-wrap">

      <div class='header'>
          <%= render 'layouts/header' %>
      </div>

      <div class='main'>
          <%= yield %>
      </div>

    </div>

  </body>

</html>
