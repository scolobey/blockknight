<body class=”ticker-page”>
  <div class="content">

    <div class="coin-list-header">
      <div class="wrapper">
        <div class="col-1">Rank</div>
        <div class="col-2">Name</div>
        <div class="col-3">Symbol</div>
        <div class="col-4">Price</div>
        <div class="col-5">24 hr change</div>
        <div class="col-6"></div>
      </div>
    </div>
    <div class="coin-list-header-shade">
    </div>

    <div class="coin-list">

      <% if @favorites %>
        <div class="coin-list-body">
          <% @favorites.each do |coin| %>
            <div class="coin-list-body-row">
              <div class="wrapper">
                <div class="col-1"><%= coin.rank %></div>
                <div class="col-2">
                  <%= link_to coin.name, coin %>
                  <% if coin.archive %>
                    (Archived)
                  <% end %>
                </div>
                <div class="col-3"><%= coin.ticker %></div>
                <div class="col-4"><%= coin.price %></div>
                <div class="col-5">
                  <% if coin.increased? %>
                    <p style="color: #3e9e3e;">+ <%= coin.percent_change %> %</p>
                  <% else %>
                    <p style="color: #dd3b4c;"><%= coin.percent_change %> %</p>
                  <% end %>
                </div>
                <div class="col-6">
                  <%= button_to "", {action: "unfollow", coin_id: coin.id, method: :post}, {class:"ribbon"} %>
                </div>
              </div>

            </div>
          <% end %>

        </div>

        <div class="divider">
        </div>
      <% end %>

      <div class="coin-list-body">
        <% @coins.each.each do |coin| %>
          <div class="coin-list-body-row">
            <div class="wrapper">
              <div class="col-1"><%= coin.rank %></div>
              <div class="col-2"><%= link_to coin.name, coin %></div>
              <div class="col-3"><%= coin.ticker %></div>
              <div class="col-4"><%= coin.price %></div>
              <div class="col-5">
                <% if coin.increased? %>
                  <p style="color: #3e9e3e;">+ <%= coin.percent_change %> %</p>
                <% else %>
                  <p style="color: #dd3b4c;"><%= coin.percent_change %> %</p>
                <% end %>
              </div>
              <div class="col-6">
                <%= button_to "", {action: "follow", coin_id: coin.id, method: :post}, {class:"ribbon_outline"} %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  </div>

  <br>
</body>
