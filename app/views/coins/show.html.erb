<% content_for :title do %>
  <title><%= @coin.name %> cryptocurrency news, price, and desciption - What is <%= @coin.ticker %>$ crypto? - blockknight.com</title>
<% end %>

<div class="coin_info">

  <div class="coin-head">
    <div class="coin-head-left">
      <b><div class="coin-title"><%= @coin.name %></div></b>

      <br>
      <div class="coin-symbol">(<%= @coin.ticker %>)</div>
    </div>

    <div class="coin-head-right">
      <div class="coin-price"><b><%= @coin.price %></b></div>
      <br>
      <% if @coin.increased? %>
        <b style="color: #3e9e3e;">+<%= @coin.percent_change %>%</b>
      <% elsif @coin.percent_change%>
        <b style="color: #dd3b4c;"><%= @coin.percent_change %>%</b>
      <% else %>
        <b style="color: #2dc0ca;">no change</b>
      <% end %>

    </div>
  </div>

  <div class="coin-body">

    <% if @followed %>
      <%= button_to "", {action: "unfollow", coin_id: @coin.id, method: :post}, {class:"ribbon"} %>
    <% else %>
      <%= button_to "", {action: "follow", coin_id: @coin.id, method: :post}, {class:"ribbon_outline"} %>
    <% end %>

    <% @coin.tags.each do |tag|%>
      <div class="tags"><%= tag.name %> </div>
    <% end %>

    <p>
      <% if @coin.description %>
        <%= @coin.description.html_safe() %>
      <% end %>
    </p>

    <p>
      <strong>News:</strong>
      <br>
      <div class="news-box">
        <% @news_items.each do |item|%>
          <% if item.approved? %>
            <div class="news-item">
              <a href=<%= item.url %>><%= item.title %></a>
              <img height="200" width="200" src=<%= item.image %>>
            </div>
          <% end %>
        <% end %>
      </div>
    </p>
  </div>

  <% if current_user && current_user.admin %>
    <%= link_to 'Edit', edit_coin_path(@coin) %>
  <% else %>
    <%= link_to 'I disagree!', '/login' %>
  <% end %>



</div>
