
<div class="coin_info">

  <div class="coin-head">
    <div class="coin-head-left">
      <b><div class="coin-title"><%= @coin.name %></div></b>
      <br>
      <div class="coin-symbol">(<%= @coin.ticker %>)</div>
    </div>

    <div class="coin-head-right">
      <div class="coin-price"><%= @coin.price %>$</div>
      <br>
      <% if @coin.increased? %>
        <b style="color: #2dc0ca;">+<%= @coin.percent_change %>%</b>
      <% elsif @coin.percent_change%>
        <b style="color: #dd3b4c;">-<%= @coin.percent_change %>%</b>
      <% else %>
        <b style="color: #2dc0ca;">no change</b>
      <% end %>
    </div>
  </div>


  <div class="coin-body">
    <p>
      <strong>Description:</strong>
      <%= @coin.description %>
    </p>

    <p>
      <strong>Key Value Proposition:</strong>
      <%= @coin.key_value_proposition %>
    </p>

    <p>
      <strong>Supply:</strong>
      <%= @coin.supply %>
    </p>

    <p>
      <strong>Team:</strong>
      <%= @coin.team %>
    </p>

    <p>
      <strong>Twitter:</strong>
      <%= @coin.twitter %>
    </p>

    <p>
      <strong>Concerns:</strong>
      <%= @coin.concerns %>
    </p>

    <p>
      <strong>Community:</strong>
      <%= @coin.community %>
    </p>

    <p>
      <strong>News:</strong>
      <br>
      <div class="news-box">
        <% @coin.feed_items.each do |item|%>
          <% if item.approved? %>
            <div class="news-item">
              <a href=<%= item.url %>><%= item.title %></a>
              <img height="200" width="200" src=<%= item.image %>>
            </div>
          <% end %>
        <% end %>
      </div>
    </p>
  </div>

  <%= link_to 'Edit', edit_coin_path(@coin) %> |
  <%= link_to 'Back', coins_path %>
</div>
